@model IEnumerable<WebStore.DomainNew.Models.EmployeeViewModel>

@{
    //Layout = null;
    ViewData["Title"] = "Index";
    var isAdmin = User.IsInRole("Admins");
}

<h1>Hello from my first view</h1>

@if (isAdmin)
{
    <a asp-action="Edit" class="btn btn-success">Добавить</a>
}

<table class="table">
    @foreach (var item in Model)
    {
        <tr>
    @if (isAdmin)
    {
        <td><a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a></td>
    }
            <td>@item.FirstName</td>
            <td>@item.SurName</td>
            <td>@item.Patronymic</td>
            <td><a asp-controller="Books" asp-action="BooksDescription" asp-route-id="@item.Id">Книги</a></td>
            <td>
                @Html.ActionLink("Детали", "Details", new {id = item.Id})
            </td>
            @if (isAdmin)
            {
                <td><a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-ban"></i></a></td>
            }
        </tr>
    }
</table>



