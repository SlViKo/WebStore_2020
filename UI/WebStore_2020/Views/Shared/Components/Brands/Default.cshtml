@model IEnumerable<WebStore.DomainNew.Models.BrandViewModel>

<div class="brands_products">
    <!--brands_products-->
    <h2>Brands</h2>
    <div class="brands-name">

        <ul class="nav nav-pills nav-stacked">
            @foreach (var brand in Model)
            {
                <li><a asp-controller="Catalog" asp-action="Shop" asp-route-brandId =(@brand.ProductsCount)> <span class="pull-right">(5)</span>@brand.Name</a></li>

            }
        </ul>
    </div>
</div><!--/brands_products-->