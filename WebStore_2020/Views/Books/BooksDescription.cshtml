@model IEnumerable<WebStore_2020.Models.BookViewModel>



@{
    ViewData["Title"] = "BooksDescription";
}

<head>
    <style>
        table, td, th {
            border: 1px solid rebeccapurple;
            border-collapse: collapse;
        }
    </style>
</head>


@Html.ActionLink("Назад к списку", "Index", "Employee")
<br />

<a asp-action="Edit" asp-route-ownerId="@ViewBag.OwnerId" class="btn btn-success">Добавить</a>

<table>
    <tr>
        <th>Название книги</th>
        <th>Автор</th>
        <th>Количество страниц</th>
        <th>Жанр</th>
        <th>Цена</th>
        <th>Владелец</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Author</td>
            <td>@item.CountPage</td>
            <td>@item.Genre</td>
            <td>@item.price</td>
            <td>
                @Html.ActionLink("Детали владельца", "Details", "Employee", new {id = item.OwnerId})
            </td>
            <td><a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-ban"></i></a></td>
        </tr>
    }
</table>